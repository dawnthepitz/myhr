<form method='post' action='/employees/'>
  <a type="Go back" href='/employees/' class='btn btn-default'>Go back</a>
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <div class="form-group">
    <label for="exampleInputEmail1">Code:</label>
    <input type="text" name="code" class="form-control" id="employeesCode" placeholder="Code">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">First Name:</label>
    <input type="text" name="firstname" class="form-control" id="employeesFirstName" placeholder="First Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Middle Name:</label>
    <input type="text" name="middlename" class="form-control" id="employeesMiddleName" placeholder="Middle Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Last Name:</label>
    <input type="text" name="lastname" class="form-control" id="employeesLastName" placeholder="Last Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">BirthDate:</label>
    <input type="date" name="birthdate" class="form-control" id="employeesBirthDate" placeholder="Birth Date">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Address:</label>
    <input type="text" name="address" class="form-control" id="employeesAddress" placeholder="Address">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Contact Number:</label>
    <input type="text" name="contactno" class="form-control" id="employeesContactNo" placeholder="Contact Number">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Date Hired:</label>
    <input type="date" name="datehired" class="form-control" id="employeesDateHired" placeholder="Date Hired">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Date Regular:</label>
    <input type="date" name="dateregular" class="form-control" id="employeesDateRegular" placeholder="Date Regular">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Date Fired:</label>
    <input type="date" name="datefired" class="form-control" id="employeesDateFired" placeholder="Date Fired">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Deparment:</label>
    <select class="form-control" id="employeesDepartment" name=departmentId>
    <%for department in @lookupDepartments%>
      <option value=<%=department.id%>><%=department.name%></option>
    <%end%>
  </select>
  </div>
  <button type="submit" class="btn btn-success">Create</button>