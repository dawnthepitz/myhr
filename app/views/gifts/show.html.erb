<form method='post' action='/gifts/update'>
  <input type="hidden" name="id" value="<%=@record.id%>">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <div class="form-group">
    <label for="exampleInputEmail1">Name:</label>
    <input type="text" name="name" class="form-control" id="giftsName" placeholder="Name" value="<%= @record.name%>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Price:</label>
    <input type="number" name="price" class="form-control" id="giftsPrice" placeholder="Price" value="<%= @record.price%>">
  </div>
  <button type="submit" class="btn btn-success">Update</button>
<% unless flash[:message].nil? %>
  <div class="alert alert-<%= flash[:message]['success'] ==true ? 'success' : 'danger' %>" role="alert">
    <%= flash[:message]['message'] %>
  </div>
<% end %>
</form>