<form method='post' action='/departments/'>
  <a type="Go back" href='/departments/' class='btn btn-default'>Go back</a>
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <div class="form-group">
    <label for="exampleInputEmail1">Code:</label>
    <input type="text" name="code" class="form-control" id="departmentsCode" placeholder="Code">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Name:</label>
    <input type="text" name="name" class="form-control" id="departmentsName" placeholder="Name">
  </div>
  <div class="form-group">
    <input type="checkbox" name="active" value="Active" id="departmentsActive" placeholder="Active" checked>This Department is Active
  </div>
  <button type="submit" class="btn btn-success">Create</button>
<% unless flash[:message].nil? %>
  <div class="alert alert-<%= flash[:message]['success'] ==true ? 'success' : 'success' %>" role="alert">
    <%= flash[:message]['message'] %>
  </div>
<% end %>
</form>