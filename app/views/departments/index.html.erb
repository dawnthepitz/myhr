<div class='form-group'>
<h2 class="mt-4">Departments:</h2>
<a type="Edit" href='/departments/new' class='btn btn-success'>+New</a>
<table class="table table-striped">
	<thead>
	<th></th>
	<th></th>
	<th>Department Code</th>
	<th>Department Name</th>
	</thead>
	<tbody>
		<% for department in @Departments%>
			<tr>
			<td>
			<input type="button" value="Open" type="Edit" onclick="window.location.href='../departments/<%=department.id%>'" class='btn btn-primary'>
			</td>
			<td>
			<input type="button" value="Delete" type="Edit" onclick="window.location.href='../departments/delete?id=<%=department.id%>'" class='btn btn-danger'>
			</td>
			</a>
			<td>
				<%= department.code %>
			</td>
			<td>
				<%= department.name%>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
<% unless flash[:message].nil? %>
  <div class="alert alert-<%= flash[:message]['success'] ==true ? 'success' : 'success' %>" role="alert">
    <%= flash[:message]['message'] %>
  </div>
<% end %>
</form>